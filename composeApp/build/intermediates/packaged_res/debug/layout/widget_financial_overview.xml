<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/widget_background">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="North Finance"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#1565C0" />

        <TextView
            android:id="@+id/widget_last_updated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Updated 2 min ago"
            android:textSize="10sp"
            android:textColor="#666666" />

    </LinearLayout>

    <!-- Net Worth Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Net Worth"
            android:textSize="12sp"
            android:textColor="#666666" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/widget_net_worth"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="$47,250"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1C1B1F" />

            <TextView
                android:id="@+id/widget_net_worth_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+$1,200"
                android:textSize="12sp"
                android:textColor="#4CAF50" />

        </LinearLayout>

    </LinearLayout>

    <!-- Account Balances -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">

        <!-- Checking Account -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginEnd="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Checking"
                android:textSize="10sp"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/widget_checking_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$2,450"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#1C1B1F" />

        </LinearLayout>

        <!-- Savings Account -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Savings"
                android:textSize="10sp"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/widget_savings_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$15,800"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#1C1B1F" />

        </LinearLayout>

    </LinearLayout>

    <!-- Streak Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ”¥"
            android:textSize="16sp"
            android:layout_marginEnd="4dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Current Streak"
            android:textSize="12sp"
            android:textColor="#666666" />

        <TextView
            android:id="@+id/widget_streak_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12 days"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#FF9800" />

    </LinearLayout>

</LinearLayout>